<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#598e96" />
             <gradient  android:angle="-90"  android:startColor="#FACC3A" android:endColor="#7fbac6"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#598e96" />
             <solid  android:color="#FACC3A"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#598e96" />
             <gradient  android:angle="-90"  android:startColor="#D5AD88" android:endColor="#905B2A" />            
         </shape>
     </item>
</selector>