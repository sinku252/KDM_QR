<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:orientation="vertical"
     
  >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
       android:orientation="vertical"
  >
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="Center Name :" />

    <TextView
        android:id="@+id/reviewcenter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="" />
    </LinearLayout>
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
  >
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="Address :" />

    <TextView
        android:id="@+id/reviewadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="50dp"
        android:text="" /></LinearLayout>
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
  >
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="City :" />

    <TextView
        android:id="@+id/reviewcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="80dp"
        android:text="" />
   </LinearLayout>
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
  >
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
      
        android:text="State :" />

    <TextView
        android:id="@+id/reviewstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="70dp"
        android:text="" /></LinearLayout>
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
  >
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="PinCode :" />

    <TextView
        android:id="@+id/reviewpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="50dp"
        android:text="" />
</LinearLayout>

      <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
  >
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="Number Of Class Rooms :" />

    <TextView
        android:id="@+id/reviewclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="" /></LinearLayout>

     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
  >  <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="Number Of Laboratories :" />

    <TextView
        android:id="@+id/reviewlab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="" /></LinearLayout>
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">
     <Button
         android:id="@+id/geobutton"
         android:layout_width="fill_parent"
    android:layout_marginRight="50dp"
           android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
      android:background="@drawable/barback_1"
        android:layout_marginLeft="50dp"
         android:layout_height="fill_parent"
         android:text="Geo Tagging" /></LinearLayout>
      <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
  > <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="Longitude :" />

    <TextView
        android:id="@+id/longi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:textSize="15dp"
        android:textStyle="bold"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="" />
      </LinearLayout>

       <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
  ><TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
         android:textSize="18dp"
        android:textStyle="bold"
       android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:text="Lattitude :" />

    <TextView
        android:id="@+id/lati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textSize="15dp"
        android:textStyle="bold"
         android:layout_marginLeft="25dp"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:text="" /></LinearLayout>
       
          <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

              <TextView
                  android:id="@+id/textView1"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                      android:textSize="18dp"
                      
        android:textStyle="bold"
       android:layout_marginLeft="10dp"
        android:textColor="#000000"
                  android:text="Center Remarks :" />

              <EditText
                  android:id="@+id/reviewmarks"
                  android:layout_width="fill_parent"
                android:layout_height="50dp"
                  android:layout_marginLeft="12dp"
                  android:layout_marginRight="12dp"
                 
                     android:cursorVisible="true"
                   android:layout_marginTop="10dp"
                  android:textSize="18dp"
                  android:maxLines="2"
                    android:inputType="textPersonName"
                android:layout_centerHorizontal="true"
                  android:textStyle="bold"
                  android:padding="15dp"
                  android:background="@drawable/rounded_corner"
                  android:textColor="#000000"
                  
                  android:ems="5" 
                  android:text=""
                  >
                  
                 
          
        
       
        
        
         
        
      
         
        
         />
                    
                 
                  <requestFocus />
              </EditText>
              
          </LinearLayout>
       
          <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

              <CheckBox
                  android:id="@+id/reviewcheck"
                  android:layout_width="wrap_content"
                  android:layout_height="80dp"
                 
                  android:textSize="15dp"
                 android:textColor="#000000"
                  android:textStyle="bold"
                  android:text="I have verified the relevant documents and state that,the above information is true and correct to the best of my knowledge." ></CheckBox>
              </LinearLayout>
        
 
          <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:layout_marginTop="10dp">
<Button
            android:id="@+id/reviewsubmit"
         android:background="@drawable/barback_1"
            android:layout_width="fill_parent"
         android:layout_marginLeft="50dp"
          android:layout_marginTop="0dp"
            android:layout_height="fill_parent"
             android:text="Submit Audit Report"
               android:textColor="#ffffff"
             android:layout_marginBottom="5dp"
             android:textSize="20dp"
             android:textStyle="bold"
            android:layout_centerHorizontal="true"
             android:layout_marginRight="50dp"
></Button></LinearLayout>
    

        
        
        
   
              
       
       
</LinearLayout>
</ScrollView>