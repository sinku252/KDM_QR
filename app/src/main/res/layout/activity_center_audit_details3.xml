<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
  
    >
    
    
     <LinearLayout
     android:layout_width="fill_parent"
     android:layout_height="fill_parent" 
     android:orientation="vertical">
     
     

  <Button
            android:id="@+id/captureid"
          android:background="@drawable/barback_1"
            android:layout_width="fill_parent"
            android:textColor="#ffffff"
            android:layout_marginTop="27dp"
            android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:text="Capture ID Photograph"
             android:textSize="20dp"
             android:textStyle="bold"
            android:layout_centerHorizontal="true"
             android:layout_marginRight="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"></Button>




		 <LinearLayout
			 android:layout_gravity="center_horizontal"
			 android:layout_width="150dp"
			 android:layout_height="100dp">

			 <ImageView
				 android:id="@+id/captimage"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:layout_marginTop="10dp"
				 android:layout_gravity="center_horizontal|center_vertical"
				 android:src="@drawable/sample">

			 </ImageView>

		 </LinearLayout>



<TextView
    android:visibility="gone"
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TextView" />
    
<TextView
      android:id="@+id/state"
       android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	    android:textSize="18dp"
	    android:layout_marginTop="6dp"
	    android:layout_marginLeft="12dp"
	    android:textStyle="bold"
	    android:layout_gravity="left"
	    android:text="State" />


<Spinner
        android:id="@+id/selectstate"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
         android:textSize="18dp"
           android:padding="15dp"
        android:layout_marginRight="12dp"
         android:background="@drawable/rounded_corner"
        android:layout_centerHorizontal="true"
        />
<TextView
      android:id="@+id/exmple"
       android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	   android:textSize="18dp"
	    android:visibility="gone"
	   
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="12dp"
	    android:textStyle="bold"
	    android:layout_gravity="left"
	    android:text="Job Roles " />


<TextView
      android:id="@+id/district"
       android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	      android:textSize="18dp"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="12dp"
	    android:textStyle="bold"
	    android:layout_gravity="left"
	    android:text="District" />


<Spinner
        android:id="@+id/selectdistrict"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
           android:textSize="18dp"
             android:padding="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rounded_corner"
        android:layout_centerHorizontal="true"
        />

<TextView
      android:id="@+id/textaddress"
       android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	      android:textSize="18dp"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="12dp"
	    android:textStyle="bold"
	    android:layout_gravity="left"
	    android:text="Address" />

<EditText
    
          android:id="@+id/address"
          android:layout_width="fill_parent"
          android:layout_height="50dp"
          android:layout_marginTop="5dp"
          android:cursorVisible="true"
          android:ems="5"
          android:background="@drawable/rounded_corner"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:hint="Enter address Max Length is 255"
          android:inputType="text"
          android:maxLines="1"
          android:maxLength="255"
          android:padding="15dp"
          android:textColor="#000000"
            android:textSize="18dp"
          android:textStyle="bold" />

<TextView
      android:id="@+id/Landmark"
       android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	     android:textSize="18dp"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="12dp"
	    android:textStyle="bold"
	    android:layout_gravity="left"
	    android:text="Major Landmark near the training center" />

<EditText
          android:id="@+id/nearcenter"
          android:layout_width="fill_parent"
          android:layout_height="50dp"
          android:layout_marginTop="5dp"
          android:cursorVisible="true"
          android:ems="5"
          android:background="@drawable/rounded_corner"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:hint="Enter Name"
          android:inputType="textPersonName"
          android:maxLines="1"
           android:padding="15dp"
          android:textColor="#000000"
           android:textSize="18dp"
          android:textStyle="bold" />


<TextView
      android:id="@+id/textcity"
       android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	   android:textSize="18dp"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="12dp"
	    android:textStyle="bold"
	    android:layout_gravity="left"
	    android:text="City" />

<EditText
          android:id="@+id/city1"
          android:layout_width="fill_parent"
          android:layout_height="50dp"
          android:layout_marginTop="5dp"
          android:cursorVisible="true"
          android:ems="5"
          android:background="@drawable/rounded_corner"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:hint="Enter Name"
          android:inputType="text"
          
          android:maxLines="1"
          android:padding="15dp"
          android:textColor="#000000"
         android:textSize="18dp"
          android:textStyle="bold" />


<TextView
      android:id="@+id/textpincode"
       android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	      android:textSize="18dp"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="12dp"
	    android:textStyle="bold"
	    android:layout_gravity="left"
	    android:text="Pincode" />

<EditText
          android:id="@+id/pincode"
          android:layout_width="fill_parent"
          android:layout_height="50dp"
          android:layout_marginTop="5dp"
          android:cursorVisible="true"
          android:ems="5"
          android:background="@drawable/rounded_corner"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:hint="Enter pincode"
          android:inputType="number"
          android:maxLines="1"
          android:maxLength="6"
          android:padding="15dp"
          android:textColor="#000000"
          android:textSize="18dp"
          android:textStyle="bold" />

		 <LinearLayout
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content">


			 <Button
				 android:layout_margin="10dp"
				 android:textStyle="bold"
				 android:textColor="#fff"
				 android:id="@+id/centerprv3"
				 android:background="@drawable/barback_1"
				 android:text="Prev"
				 android:layout_weight="1"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content" />

			 <Button
				 android:layout_margin="10dp"
				 android:textStyle="bold"
				 android:textColor="#fff"
				 android:id="@+id/savebtn"
				 android:background="@drawable/barback_1"
				 android:text="Save"
				 android:layout_weight="1"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content" />



			 <Button
				 android:layout_margin="10dp"
				 android:textStyle="bold"
				 android:textColor="#fff"
				 android:id="@+id/centernext3"
				 android:background="@drawable/barback_1"
				 android:text="Next"
				 android:layout_weight="1"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content" />


		 </LinearLayout>



	 </LinearLayout>
     </ScrollView>