<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
   
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
   
        android:orientation="vertical" >
  
    
     <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Center Audit Picture's" />
   <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="-20dp"
        >
    
   
     
    <ImageView
        android:id="@+id/adminfrontview"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="right"
        android:src="@drawable/sample">
        </ImageView>

    <Button
            android:id="@+id/adminfrontview1"
            style="@style/btnStyleBlackpearl"
            android:layout_width="160dp"
            android:layout_marginTop="50dp"
            android:layout_height="40dp"
               android:background="@drawable/barback_1"
             android:layout_marginLeft="5dp"
             android:text="Center Front View"
             android:textSize="18dp"
            android:layout_gravity="left">
            
         </Button>

    <TextView
        android:id="@+id/oo"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="TextView" />

     </FrameLayout>
     
   
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    
   
     
    <ImageView
        android:id="@+id/admininsideview"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:src="@drawable/sample">
        </ImageView>

    <Button
            android:id="@+id/admininsideview1"
            style="@style/btnStyleBlackpearl"
           android:layout_width="160dp"
            android:layout_marginTop="35dp"
            android:layout_height="40dp"
               android:background="@drawable/barback_1"
             android:layout_marginLeft="5dp"
             android:text="Center Inside View"
             android:textSize="18dp"
            android:layout_gravity="left">
            
         </Button>
     </FrameLayout>
   <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    
   
     
    <ImageView
        android:id="@+id/admindoc1"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:src="@drawable/sample">
        </ImageView>

    <Button
            android:id="@+id/admindoc11"
            style="@style/btnStyleBlackpearl"
           android:layout_width="160dp"
            android:layout_marginTop="20dp"
            android:layout_height="67dp"
               android:background="@drawable/barback_1"
             android:layout_marginLeft="5dp"
             android:text="Own/Franchisee Doc1"
             android:textSize="18dp"
            android:layout_gravity="left">
            
         </Button>
     </FrameLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    
   
     
    <ImageView
        android:id="@+id/admindoc2"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:src="@drawable/sample">
        </ImageView>

    <Button
            android:id="@+id/admindoc22"
            style="@style/btnStyleBlackpearl"
           android:layout_width="160dp"
            android:layout_marginTop="20dp"
            android:layout_height="67dp"
               android:background="@drawable/barback_1"
             android:layout_marginLeft="5dp"
             android:text="Own/Franchisee Doc2"
             android:textSize="18dp"
            android:layout_gravity="left">
            
         </Button>
     </FrameLayout>
     
    
    
    
    
     <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    
   
     
    <ImageView
        android:id="@+id/adminbill"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:src="@drawable/sample">
        </ImageView>

    <Button
            android:id="@+id/adminbill1"
            style="@style/btnStyleBlackpearl"
           android:layout_width="160dp"
            android:layout_marginTop="20dp"
            android:layout_height="67dp"
               android:background="@drawable/barback_1"
             android:layout_marginLeft="5dp"
             android:text="Electricity/Telephone Bill"
             android:textSize="18dp"
            android:layout_gravity="left">
            
         </Button>
     </FrameLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/adminprv2"
                android:background="@drawable/barback_1"
                android:text="Prev"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




            <Button
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/savebtn"
                android:background="@drawable/barback_1"
                android:text="Save"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <Button
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/adminnext2"
                android:background="@drawable/barback_1"
                android:text="Next"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    
    
    
   </LinearLayout>
   </ScrollView>